@charset "utf-8";
/* CSS Document */

* {
	margin: 0;
	padding: 0;
	font-family:"Microsoft YaHei", 微软雅黑, "MicrosoftJhengHei", 华文细黑, STHeiti, MingLiu;
}
a {
	text-decoration: none;
}
li {
	list-style: none;
}
.clearfix {
	clear: both;
}
/*头部开始*******************************/
#header {
	width: 1100px;
	border-bottom:1px solid #E6E8EB;
	line-height: 37px;
	margin: 0 auto;
	border-radius: 2px;
}
#header>span {
	color: #353B46;
	font-size: 14px;
	margin-left: 21px;
}
.content_box {
	width: 1100px;
	background-color: #fcfcfc;
	margin: 0 auto
}
.content {
	width: 1020px;
	margin: 0 auto;
}
.content p {
	color: black;
	margin-top: 15px;
}
.content p:LAST-CHILD{
	margin-top: 0px;
}
/*栏目开始*******************************/
.col_box {
	/* width: 1020px; */
	width: 900px;
	margin: 0 auto;
	margin-top: 22px;
}
.column li {
	float: left;
	margin-right: 15px;
}

.column li img{
	width: 285px;
	height: 190px;
	
}
.column li:last-child {
	margin-right: 0px;
}
.column_list {
	margin-top: 45px;
}
.column_list li {
	float: left;
	margin-right: 9px;
}
.column_list li img{
	width: 140px;
	height: 116px;
}
.column_list li:last-child {
	margin-right: 0px;
}
/*页脚开始*******************************/
.footer {
	width: 1020px;
	margin: 0 auto;
	margin-top: 65px;
	height: 100px;
	margin-bottom: 137px;
}
.footer p {
	color: #002e73;
	text-align: center;
	font-size: 12px;
}

/*弹窗开始*******************************/
.text {
	width:140px;
	height:auto;
	background-color:#000;
	FILTER:alpha(opacity=60);
	opacity:0.7;
	-moz-opacity:0.7;
	position:absolute;
	left:0px;
	bottom:3px;
}
.imgtext {
	width:140px;
	height:119px;
	float:left;
	padding:0px;
	color:#fff;
	font-size:13px;
	
	text-align: center;
}
.column_1{position: relative;}
.column_2{position: relative;}
.column_3{position: relative;}
.column_4{position: relative;}
.column_5{position: relative;}
.column_6{position: relative;}

.ppp{
	text-indent: 2em;
	line-height: 35px;
	width: 900px;
	margin: 0 auto;
}
.imgtext{
	position:relative;
}
.imgtext span{
	display:block;
	width:125px;
	height:119px;
	text-align: center;
	position:absolute;
	top:50%;
	left:50%;
	margin-left:-61px;
	margin-top:-25px;
	
}

