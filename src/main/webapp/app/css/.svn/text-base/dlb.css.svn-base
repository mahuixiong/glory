	width: 68px;
	height: 24px;
	line-height: 24px;
	color: #58a0fd;
	
	padding-right: 3px;
	padding-left: 12px;
	border-radius: 3px;
	border:1px solid #58a0fd;
	display: inline-block;
	text-align: center;
	background:url(../img/add1.png) no-repeat 6px 9px;
}
.user-content .user-search p .user-add:hover{
	background:url(../img/add2.png) no-repeat 6px 9px ,#0287FE;
	color:#fff;
}
/*table*/
.user-content .user-info{
	width: 100%;
	text-align: center;
	margin-top: 18px;
    margin-bottom: 24px;
}

.user-content .user-info .info-item{
	height: 36px;
	background: #fff;
	display: table-row;
	border-radius: 2px;
	border-bottom: 1px solid #E9F5FF;
	color:#666;
}

.user-content .user-info .info-item td:first-child{
	border-top-left-radius: 4px;
	border-bottom-left-radius: 4px;
}
.user-content .user-info .info-item td:last-child{
	border-top-right-radius: 4px;
	border-bottom-right-radius: 4px;
}
.user-content .user-info .info-item.info-first td:first-child{
	border-top-left-radius: 2px;
}
.user-content .user-info .info-item.info-first td:last-child{
	border-top-right-radius: 2px;
}
.user-content .user-info .info-item:last-child td:first-child{
	border-bottom-left-radius: 2px;
}
.user-content .user-info .info-item:last-child td:last-child{
	border-bottom-right-radius: 2px;
}

.user-content .user-info .info-first{
	background: #E9F5FF;
	color: #585D67;
}
.user-content .user-info .info-item:last-child{
	border: 0px;
} 
.user-content .user-info .info-item a{
	color: #fff;
	width:50px;
	height:20px;
	display:inline-block;
	background:#0287FE;
	border-radius:3px;
}
.user-content .user-info .info-item .delete{
	margin-left:6px;
	background:#E6424C; 
	width:50px;
	height:20px;
	border-radius:3px;
	
}
