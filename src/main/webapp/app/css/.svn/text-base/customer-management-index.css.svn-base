/*header*/
.cus-header{
	width: 100%;
	height: 62px;
	min-width: 1100px;
	background: #e2efff;
}
.cus-header div{
	float: left;
}
.cus-header .cus-logo{
	width: 239px;
	background: #58a0fd;
	text-align: center;
}
.cus-header .cus-logo a{
	color: #fff;
	line-height: 62px;
	font-size: 18px;
}
.cus-header .cus-manage{
	line-height: 62px;
	margin-left: 54px;
}
.cus-header .cus-manage a,
.cus-header .cus-quit a{
	color: #4f6aa8;
}

.cus-header .cus-quit{
	float: right;
	line-height: 62px;
	margin-right: 25px;
}
.cus-header .cus-quit img{
	vertical-align: -3px;
}
/*content*/
.cus-content{
	width: 95%;
	margin: 0 auto;
	color: #A5A5A5;
}

.cus-content .cus-admin{
	padding-top: 18px;
}
.cus-content .cus-admin a{
	color: #4f6aa8;
}
.cus-content .cus-admin a.active{
	color: #58a0fd;
	background:url(../img/kehu.png) no-repeat;
	background-size:24%;
	display: inline-block;
	padding-left:22px;
}
.cus-content .cus-admin a:nth-child(2){
	color: #58a0fd;
	margin-left:15px;
	background:url(../img/guanliyuan.png) no-repeat;
	background-size:15%;
	display: inline-block;
	padding-left:22px;
}
.cus-content .cus-search{
	margin-top: 44px;
}
.cus-content .cus-search input{
	width: 180px;
	height: 27px;
	margin-left: 8px;
	margin-right: 12px;
	border-radius: 2px;
	box-sizing: border-box;
	background: transparent;
	border: 1px solid #E6E6E6;
}
.cus-content .cus-search select{
	padding-left:17px;
	appearance: none;
	-webkit-appearance: none;
	-moz-appearance: none;
	width: 165px;
	height: 27px;
	outline: none;
	border-radius: 2px;
	margin-left: 8px;
	margin-right: 10px;
	border: 1px solid #E6E6E6;
	background: transparent;
	background: url(../img/xl.png) no-repeat 142px center;
}
.cus-content .cus-search .search-btn{
	padding-left:8px;
	width: 67px;
	height: 27px;
	line-height: 27px;
	color: #fff;
	border-radius: 2px;
	/* background: #0287FE; */
	display: inline-block;
	text-align: center;
	background:url(../img/search2.png) no-repeat 10px 8px,#0287FE;
}
/*table*/
.cus-content .cus-info{
	width: 100%;
	text-align: center;
	margin-top: 30px;
    margin-bottom: 24px;
}

.cus-content .cus-info .info-item{
	height: 36px;
	background: #fff;
	display: table-row;
	border-radius: 2px;
	border-bottom: 3px solid #E9F5FF;
}

.cus-content .cus-info .info-item td:first-child{
	border-top-left-radius: 4px;
	border-bottom-left-radius: 4px;
}
.cus-content .cus-info .info-item td:last-child{
	border-top-right-radius: 4px;
	border-bottom-right-radius: 4px;
}
.cus-content .cus-info .info-item.info-first td:first-child{
	border-top-left-radius: 2px;
}
.cus-content .cus-info .info-item.info-first td:last-child{
	border-top-right-radius: 2px;
}
.cus-content .cus-info .info-item:last-child td:first-child{
	border-bottom-left-radius: 2px;
}
.cus-content .cus-info .info-item:last-child td:last-child{
	border-bottom-right-radius: 2px;
}

.cus-content .cus-info .info-first{
	background: #E9F5FF;
	color: #353B46;
}
.cus-content .cus-info .info-item:last-child{
	border: 0px;
} 
.cus-content .cus-info .info-item a{
	color: #fff;
	width:50px;
	height:20px;
	display:inline-block;
	background:#0287FE;
	border-radius:3px;
}
/* .cus-content .cus-info .info-item .delete::before{
	content: " | ";
	color: #58a0fd;
} */
.cus-content .cus-info .info-item .delete{
	margin-left:6px;
	background:#E6424C; 
	width:50px;
	height:20px;
	border-radius:3px;
	
}
