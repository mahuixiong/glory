<mapper namespace="top.glory.web.dao.UserMapper">
    
    
    <!-- 用户登录验证查询 -->
    <select id="authentication" resultType="top.glory.web.model.User" parameterType="map">
        select
        *
        from user
        where login_name = #{record.login_name} and password = #{record.password}
    </select>

	<select id="selectByLogin_name" parameterType="string" resultType="top.glory.web.model.User">
		select
        *
        from user
        where login_name = #{login_name}
	</select>
	
